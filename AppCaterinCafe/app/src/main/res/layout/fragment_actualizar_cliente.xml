<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        style="@style/tittles_style"
        android:text="ACTUALIZAR PERFIL"/>

        <TextView
            style="@style/textView_style"
            android:paddingTop="20dp"
            android:text="Nombres"
            />

        <EditText
            android:id="@+id/edtNombre"
            style="@style/editText_style"
            android:hint="Ingrese Nombre"/>

        <TextView
            style="@style/textView_style"
            android:text="Apellidos"
            />

        <EditText
            android:id="@+id/edtApellido"
            style="@style/editText_style"
            android:hint="Ingrese Nombre"/>

        <TextView
            style="@style/textView_style"
            android:text="Correo Electrónico"
            />


        <EditText
            android:id="@+id/edtCorreo"
            style="@style/editText_style"
            android:hint="Ingrese Correo Electrónico"/>

        <TextView
            style="@style/textView_style"
            android:text="Saldo Disponible" />

        <EditText
            android:id="@+id/edtSaldo"
            style="@style/editText_style"
            android:layout_width="120dp"
            android:inputType="numberDecimal"
            android:hint="Monto"/>

        <TextView
            style="@style/textView_style"
            android:text="Cargo Empresa"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spnCargos"
            style="@style/spinners_style" />

        <TextView
            style="@style/textView_style"
            android:paddingBottom="9dp"
            android:text="Autoriza Subsidio"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/rdgAutoriza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SI"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <RadioButton
                android:id="@+id/rbtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnActualizar"
            style="@style/button_style"
            android:text="ACTUALIZAR DATOS" />

    </LinearLayout>
</RelativeLayout>